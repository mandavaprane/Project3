<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="practice.testapp.ScoresActivity">


    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff5b483a"
        android:textSize="36sp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:src="@drawable/raja_rani"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:text="You won!!!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent_material_light"
                android:textSize="36sp"
                android:id="@+id/txtwin"
                android:layout_span="2"
                android:visibility="gone"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:id="@+id/txtScore"
                android:layout_span="2"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtPlayer1"
                />
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtScore1"
                android:gravity="right"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtPlayer2" />
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtScore2"
                android:gravity="right"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtPlayer3"/>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtScore3"
                android:gravity="right"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtPlayer4" />
            <TextView
                android:text="Scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txtScore4"
                android:gravity="right"/>
        </TableRow>
        <TableRow
            android:layout_span="2">
            <Button
                android:id="@+id/btnPlayAgain"
                android:text="Play Again"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2">
            </Button>
        </TableRow>
        <TableRow
            android:layout_span="2">

            <Button
                android:id="@+id/btnExit"
                android:text="Exit  Game"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_span="2">
            </Button>

        </TableRow>
    </TableLayout>
</RelativeLayout>